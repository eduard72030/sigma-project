        { q: "Perdiste la billetera.", a: ["Entrar en pÃ¡nico.", "Bloquear tarjetas y seguir.", "Enfadarse contigo."], e: [[-20, -10, -10], [10, 0, 5], [-5, 0, 0]] }
    ];

    let situacionActual = null;

    function cargarSituacion() {
        if (decisionesHoy >= 3) {
            finalizarDia();
            return;
        }

        situacionActual = situaciones[Math.floor(Math.random() * situaciones.length)];
        document.getElementById('situation').innerText = situacionActual.q;
        document.getElementById('btn0').innerText = situacionActual.a[0];
        document.getElementById('btn1').innerText = situacionActual.a[1];
        document.getElementById('btn2').innerText = situacionActual.a[2];
    }

    function seleccionar(index) {
        let efectos = situacionActual.e[index];
        stats.mente += efectos[0];
        stats.dinero += efectos[1];
        stats.respeto += efectos[2];
        
        decisionesHoy++;
        actualizarPantalla();
        
        if (checkGameOver()) return;
        cargarSituacion();
    }

    function actualizarPantalla() {
        document.getElementById('mente').innerText = stats.mente;
        document.getElementById('dinero').innerText = stats.dinero;
        document.getElementById('respeto').innerText = stats.respeto;
    }

    function checkGameOver() {
        if (stats.mente < 20 || stats.dinero < 20 || stats.respeto < 20) {
            document.getElementById('game-area').innerHTML = "<h2>GAME OVER</h2><p>Perdiste tu enfoque. Un verdadero Sigma no se rinde.</p><button class='option-btn' onclick='location.reload()'>Reiniciar</button>";
            return true;
        }
        return false;
    }

    function finalizarDia() {
        let total = stats.mente + stats.dinero + stats.respeto;
        let rango = "";
        
        if (stats.respeto >= 100) rango = "Sigma reconocido ðŸ—¿";
        else if (total >= 200) rango = "Leyenda Sigma ðŸ†";
        else if (total >= 150) rango = "Sigma Ã‰lite âœ¨";
        else rango = "NPC Promedio ðŸ“‰";

        document.getElementById('game-area').innerHTML = `<h2>DÃ­a ${dia} Finalizado</h2><p>Puntos Totales: ${total}</p><p>Rango: <strong>${rango}</strong></p><button class='option-btn' onclick='siguienteDia()'>Siguiente DÃ­a</button>`;
    }

    function siguienteDia() {
        dia++;
        decisionesHoy = 0;
        document.getElementById('game-area').innerHTML = `<p id="situation"></p><button class="option-btn" onclick="seleccionar(0)" id="btn0"></button><button class="option-btn" onclick="seleccionar(1)" id="btn1"></button><button class="option-btn" onclick="seleccionar(2)" id="btn2"></button>`;
        cargarSituacion();
    }

    // Iniciar
    cargarSituacion();
</script>

